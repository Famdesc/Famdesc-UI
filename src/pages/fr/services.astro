---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import familyTreeOne from "@images/familytree-image-1.avif";
import familyTreeTwo from "@images/family-tree-image-2.avif";
import videocall from "@images/chat-videocall-image.avif";
import security from "@images/cyber-security.avif";
import privacity from "@images/privacity.avif";
import algorithm from "@images/algorithm-image.avif";
import virtualAssistant from "@images/virtual-assistant.avif";
import customized from "@images/customized.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Arbre Généalogique Interactif",
    subTitle:
      "Découvrez et construisez votre histoire familiale avec un arbre interactif qui connecte les générations et permet de partager des souvenirs avec des photos, des vidéos et des récits. Explorez de nouvelles connexions avec des outils de recherche généalogique et laissez un héritage visuel pour les générations futures.",
    single: false,
    imgOne: familyTreeOne,
    imgOneAlt: "Un arbre lumineux aux branches numériques qui se transforment en photos de famille et des lignes connectant des générations, sur un fond de ciel au crépuscule.",
    imgTwo: familyTreeTwo,
    imgTwoAlt: "Un graphique interactif avec des nœuds représentant des membres de la famille, reliés par des lignes lumineuses, avec des documents anciens et des photos encadrées émergeant du fond.",
    btnExists: true,
    btnTitle: "Plus sur l'arbre généalogique",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Chat et Appels Vidéo avec Chiffrement de Bout en Bout",
    subTitle:
      "Restez proche de vos proches avec des chats sécurisés et des appels vidéo de haute qualité. Partagez des photos et des messages en toute tranquillité et profitez d'expériences partagées en temps réel sans interruption ni intrusion.",
    img: videocall,
    imgAlt: "Des amis ou membres de la famille sourient lors d’un appel de groupe, entourés de symboles de cadenas et d’ondes de connexion sécurisée.",
    btnExists: true,
    btnTitle: "Plus sur la communication sécurisée",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Confidentialité et Sécurité Totale de vos Données",
    subTitle:
      "Vous décidez de ce que vous partagez et avec qui. Grâce à des contrôles avancés et un chiffrement sécurisé, vous gardez une totale transparence sur l'accès à vos informations. La confidentialité n'est pas une option chez Famdesc, c'est notre priorité.",
    single: false,
    imgOne: privacity,
    imgOneAlt: "Un utilisateur devant un écran avec plusieurs couches de sécurité visibles comme des boucliers et cadenas numériques.",
    imgTwo: security,
    imgTwoAlt: "Une interface visuelle avec des contrôles de confidentialité activés, chaque icône de données protégée par des cadenas ou des lignes de sécurité lumineuses.",
    btnExists: true,
    btnTitle: "Plus sur la confidentialité et le contrôle",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Contenu de Haute Qualité Adapté à Vous",
    subTitle:
      "Profitez d’un fil d’actualités sans bruit, avec du contenu significatif et utile ajusté à vos intérêts et relations. Nous ne sommes pas un réseau social ordinaire, mais un espace qui priorise ce qui compte vraiment sans encombrer votre quotidien.",
    img: algorithm,
    imgAlt: "Des algorithmes comme des engrenages organisant divers contenus : livres, vidéos et événements familiaux.",
    btnExists: true,
    btnTitle: "Plus sur les algorithmes éthiques de contenu",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Assistance Personnalisée avec IA pour votre Famille",
    subTitle:
      "Découvrez comment un assistant virtuel peut vous aider à gérer vos tâches, à rappeler des événements importants et à offrir des recommandations personnalisées. L’IA chez Famdesc est là pour améliorer votre expérience sans complications.",
    single: false,
    imgOne: virtualAssistant,
    imgOneAlt: "Structure en cours de construction",
    imgTwo: customized,
    imgTwoAlt: "Bâtiment marron et gris en construction",
    btnExists: true,
    btnTitle: "Plus sur l'IA et l'organisation familiale",
    btnURL: "#",
  },
];
---

<MainLayout
  title="Services | Famdesc"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://famdesc.com/fr/services",
    "url": "https://famdesc.com/fr/services",
    "name": "Services de Consultation Expert | Famdesc",
    "description": "Alliant expertise et vision, Famdesc fournit des services exceptionnels et des solutions complètes dans l'industrie du matériel et de la construction, de la consultation à l'achèvement du projet.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://famdesc.com/fr",
        "name": "Famdesc",
        "description": "Famdesc offre des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet."
    },
    "inLanguage": "fr"
  }}
>
  <MainSection
    title="Notre Vision pour l'Avenir"
    subTitle="Nous croyons que la technologie est un outil pour connecter les familles de demain. Dans les années à venir, nous élargirons nos services en réponse aux besoins émergents, explorant de nouvelles formes d’automatisation, de personnalisation et de soutien émotionnel. Nous travaillerons également sur des partenariats stratégiques pour enrichir l'expérience sur Famdesc."
    btnExists={false}
    btnTitle=""
    btnURL="#"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Notre Avenir : Un Écosystème Dynamique Connecté par la Famille"
    subTitle="Famdesc construit une plateforme qui transcende le numérique pour devenir une partie intégrante de la vie familiale. Dans les années à venir, nous mettrons en œuvre de nouvelles technologies comme la réalité augmentée (AR) pour revivre des moments historiques à la maison et explorerons des connexions avec des appareils intelligents tout en gardant la confidentialité, la sécurité et une expérience enrichissante en priorité."
    mainStatTitle="-- %"
    mainStatSubTitle="de nos clients jugent leur expérience avec Famdesc exceptionnelle"
    stats={[
      {
        stat: "-- %",
        description: "des utilisateurs considèrent que le contenu qu'ils reçoivent est pertinent.",
      },
      {
        stat: "99.9% ",
        description: "de disponibilité des services à tout moment",
      },
      {
        stat: "-- %",
        description: "des utilisateurs interagissent au moins une fois par jour sur Famdesc",
      },
    ]}
  />
</MainLayout>
