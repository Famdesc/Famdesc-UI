---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import familyTreeOne from "@images/familytree-image-1.avif";
import familyTreeTwo from "@images/family-tree-image-2.avif";
import videocall from "@images/chat-videocall-image.avif";
import security from "@images/cyber-security.avif";
import privacity from "@images/privacity.avif";
import algorithm from "@images/algorithm-image.avif";
import virtualAssistant from "@images/virtual-assistant.avif";
import customized from "@images/customized.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Interactive Family Tree",
    subTitle:
      "Discover and build your family history with an interactive tree that connects generations and allows you to share memories through photos, videos, and stories. Explore new connections with genealogy tracking tools and leave a visual legacy for future generations.",
    single: false,
    imgOne: familyTreeOne,
    imgOneAlt: "A glowing tree with digital branches transforming into family photos and connections, set against a sunset sky",
    imgTwo: familyTreeTwo,
    imgTwoAlt: "An interactive chart with nodes representing family members, connected by bright lines, with framed photos and ancient documents in the background",
    btnExists: true,
    btnTitle: "Learn more about the family tree",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Chat and Video Calls with End-to-End Encryption",
    subTitle:
      "Stay close to your loved ones with secure chats and high-quality video calls. Share photos and messages privately and enjoy real-time reactions without interruptions or privacy concerns.",
    img: videocall,
    imgAlt: "Friends or family smiling on a group call, surrounded by lock icons and secure connection waves",
    btnExists: true,
    btnTitle: "Learn more about secure communication",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Privacy and Full Data Security",
    subTitle:
      "You control what you share and with whom. With advanced settings and secure encryption, you have full transparency over data access. Privacy isn't optional at Famdesc—it’s our top priority.",
    single: false,
    imgOne: privacity,
    imgOneAlt: "A user facing a screen showing multiple security layers like shields and digital locks",
    imgTwo: security,
    imgTwoAlt: "A visual interface with activated privacy controls, where every data icon is secured with locks or glowing lines",
    btnExists: true,
    btnTitle: "Learn more about privacy and control",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "High-Quality Content Curated Just for You",
    subTitle:
      "Enjoy a distraction-free feed with meaningful, relevant content tailored to your interests and relationships. We're not just another social network—we prioritize what truly matters to you.",
    img: algorithm,
    imgAlt:
      "Algorithms depicted as gears organizing diverse content: books, videos, and family events",
    btnExists: true,
    btnTitle: "Learn more about ethical content algorithms",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "AI-Powered Personal Assistance for Your Family",
    subTitle:
      "Discover how a virtual assistant can help you manage tasks, remember important events, and provide personalized recommendations. Our AI enhances your experience without complexity.",
    single: false,
    imgOne: virtualAssistant,
    imgOneAlt: "An AI-powered virtual assistant assisting a user with schedules and reminders",
    imgTwo: customized,
    imgTwoAlt: "A digital assistant dashboard showing family-related task delegation and recommendations",
    btnExists: true,
    btnTitle: "Learn more about AI for family organization",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://famdesc.com/services",
    "url": "https://famdesc.com/services",
    "name": "FDigital Services to Connect Families | Famdesc",
    "description": "Famdesc blends advanced technology with a family-oriented vision to provide digital tools that strengthen family bonds. From interactive family trees and secure communication to AI-powered assistance, our platform is designed to preserve memories and create meaningful connections in a safe, private environment.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://famdesc.com",
        "name": "Famdesc",
        "description": "Famdesc offers digital tools and services focused on family, prioritizing privacy, security, and personalization to nurture meaningful connections across generations."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Our Vision for the Future"
    subTitle="We believe technology is the key to connecting families of tomorrow. In the coming years, we will expand our services to meet emerging needs, exploring new forms of automation, personalization, and emotional support. Strategic partnerships will further enrich the Famdesc experience."
    btnExists={false}
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Our Future: A Dynamic and Family-Connected Ecosystem"
    subTitle="Famdesc is building a platform that goes beyond digital, becoming an integral part of family life. We will integrate augmented reality (AR) to relive historical moments at home and explore connections with smart home devices—all while maintaining our core values of privacy, security, and enriching family experiences."
    mainStatTitle="-- %"
    mainStatSubTitle="of our users rate their experience with Famdesc as exceptional"
    stats={[
      {
        stat: "-- %",
        description: "of users find the content they receive relevant.",
      },
      {
        stat: "99.9% ",
        description: "uptime for all services at any time",
      },
      {
        stat: "-- %",
        description: "of users interact on Famdesc at least once a day.",
      },
    ]}
  />
</MainLayout>
