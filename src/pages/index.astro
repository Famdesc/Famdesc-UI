---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import robustFeatures from "@images/robust-features.avif";
import tools from "@images/innovative-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import ClientsSliderSection from "@/components/sections/landing/ClientsSliderSection.astro";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    title="Proudly Open Source"
    btnId="dismiss-button"
    btnTitle="Explore Famdesc on GitHub"
    url="https://github.com/nardis9501/Famdesc-landing-blog"
  />

  <HeroSection
    title=`Build, Share, Preserve:
    <span
        class="text-salmon-500 dark:text-salmon-400">Famdesc</span>`
    subTitle="Your Digital Haven for Family Moments"
    primaryBtn="Donate Now"
    openInNewTab={true}
    primaryBtnURL="https://www.gofundme.com/famdesc"
    secondaryBtn="Contact Our Team"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Multigenerational family gathered and smiling"
  />

  <!-- <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry giants."
  /> -->

  <ClientsSliderSection
    title="Trusted by Industry Experts"
    subTitle="Join the visionaries who trust Famdesc to revolutionize their social connections."
  />

  <FeaturesGeneral
    title="Discover Famdesc: Our Vision And Core Values."
    subTitle="At Famdesc, we address the unique challenges faced in the realm of social connectivity. From innovative features to expert services, we're dedicated to helping you forge meaningful connections and enhance your online experience."
    src="https://player.vimeo.com/video/987746713?title=0&byline=0&portrait=0&badge=0&autopause=0&player_id=0&app_id=58479"
    alt="Famdesc can help you connect with your loved ones while keeping your data secure. Join us and start sharing today!"
    features={features}
  />

  <FeaturesNavs
    title=`Customize <span class="text-salmon-500 dark:text-salmon-400">Famdesc</span> to Perfectly Suit Your Social Networking Needs.`
    tabs={[
      {
        heading: "Innovative Tools",
        content:
          "Empower your social interactions with Famdesc's innovative tools. From seamless content sharing to advanced privacy controls, enjoy a sophisticated social networking experience that keeps you in control.",
        svg: "tools",
        src: tools,
        alt: "Family using innovative social media tools on Famdesc effortlessly sharing content.",
        first: true,
      },
      {
        heading: "Intuitive Dashboards",
        content:
          "Navigate with ease using Famdesc's intuitive dashboards. Manage your connections and interactions effortlessly with user-friendly interfaces designed for quick and effective social networking.",
        svg: "dashboard",
        src: dashboard,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Robust Features",
        content:
          "Minimize complexity, maximize engagement. Famdesc's robust features streamline your social interactions, delivering an experience that stands out for its excellence and ease of use.",
        svg: "features",
        src: robustFeatures,
        alt: "Image reflecting solid social interactions",
      },
    ]}
  />

  <TestimonialsSection
    title="Connect and Thrive with Famdesc"
    subTitle="At Famdesc, we redefine the way you connect with your loved ones. Experience seamless family interactions with our intuitive platform designed to strengthen bonds and enrich lives."
    ;
    testimonials={[
      {
        content:
          "Famdesc significantly enhances our family connections. The setup was seamless, and the ability to share precious moments instantly has transformed our family interactions. Truly a remarkable platform for fostering real, meaningful connections!",
        author: "Yuri",
        role: " Software Engineer | ONLIVE.SITE.",
        avatarSrc: "https://avatars.githubusercontent.com/u/48690649?v=4",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description:
          "active users â€” families, genealogists, and community historians building and preserving their legacies.",
      },
      {
        count: "3x",
        description:
          "increase in meaningful connections with enhanced user-centric design and sharing tools.",
      },
      {
        count: "20%",
        description:
          "increase in efficiency managing family trees and sharing memories, thanks to our streamlined and user-friendly interface.",
      },
      {
        count: "4.8/5",
        description:
          "average user satisfaction rating, reflecting our commitment to high-quality content and exceptional user experience.",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="Famdesc is an open-source template, meticulously crafted with Astro, Tailwind CSS, and Preline UI frameworks."
    url="https://github.com/nardis9501/Famdesc-landing-blog"
  />
</MainLayout>
