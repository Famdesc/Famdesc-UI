---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import familyTreeOne from "@images/familytree-image-1.avif";
import familyTreeTwo from "@images/family-tree-image-2.avif";
import videocall from "@images/chat-videocall-image.avif";
import security from "@images/cyber-security.avif";
import privacity from "@images/privacity.avif";
import algorithm from "@images/algorithm-image.avif";
import virtualAssistant from "@images/virtual-assistant.avif";
import customized from "@images/customized.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Árbol Genealógico Interactivo",
    subTitle:
      "Descubre y construye tu historia familiar con un árbol interactivo que permite conectar generaciones y compartir recuerdos con fotos, videos y relatos. Explora nuevas conexiones con herramientas de rastreo genealógico y deja un legado visual para las próximas generaciones.",
    single: false,
    imgOne: familyTreeOne,
    imgOneAlt: "Un árbol brillante con ramas digitales que se transforman en fotos familiares y líneas que conectan generaciones, sobre un fondo suave de cielo al atardecer",
    imgTwo: familyTreeTwo,
    imgTwoAlt: "Un gráfico interactivo con nodos que representan a familiares, conectados por líneas brillantes; alrededor, documentos antiguos y fotos enmarcadas emergen del fondo",
    btnExists: true,
    btnTitle: "Más sobre el árbol genealógico",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Chat y Videollamadas con Cifrado Extremo a Extremo",
    subTitle:
      "Mantente cerca de tus seres queridos con chats seguros y videollamadas de alta calidad. Comparte fotos y mensajes sin preocuparte por la privacidad, y disfruta de reacciones y experiencias compartidas en tiempo real, sin interrupciones ni intrusiones.",
    img: videocall,
    imgAlt: "Amigos o familiares sonríen en una llamada grupal, rodeada por símbolos de candados y ondas seguras de conexión",
    btnExists: true,
    btnTitle: "Más sobre comunicación segura",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Privacidad y Seguridad Total de tus Datos",
    subTitle:
      "Tú decides qué compartes y con quién. Con controles avanzados y cifrado seguro, tienes total transparencia sobre quién accede a tu información. La privacidad no es una opción en Famdesc, es nuestra prioridad.",
    single: false,
    imgOne: privacity,
    imgOneAlt: "Un usuario frente a una pantalla con múltiples capas de seguridad visibles como escudos y candados digitales",
    imgTwo: security,
    imgTwoAlt: "Una interfaz visual con controles de privacidad activados, cada ícono de datos protegido por candados o líneas brillantes de seguridad",
    btnExists: true,
    btnTitle: "Más sobre privacidad y control",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Contenido de Alta Calidad Curado Solo para Ti",
    subTitle:
      "Disfruta de un feed libre de ruido con contenido significativo y útil, ajustado a tus intereses y relaciones. No somos una red más, sino un espacio que prioriza lo que realmente importa sin saturar tu día a día.",
    img: algorithm,
    imgAlt:
      "Algoritmos como engranajes que organizan contenido diverso: libros, videos, y eventos familiares",
      btnExists: true,
    btnTitle: "Más sobre algoritmos éticos de contenido",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Asistencia Personalizada con IA para tu Familia",
    subTitle:
      "Descubre cómo un asistente virtual puede ayudarte a gestionar tareas, recordar eventos importantes y ofrecer recomendaciones personalizadas. La IA en Famdesc está aquí para mejorar tu experiencia sin complicaciones.",
    single: false,
    imgOne: virtualAssistant,
    imgOneAlt: "In progress building structure",
    imgTwo: customized,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: true,
    btnTitle: "Más sobre IA y organización familiar",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://famdesc.com/services",
    "url": "https://famdesc.com/services",
    "name": "Expert Consultation Services | Famdesc",
    "description": "Uniting expertise with your vision, Famdesc provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://famdesc.com",
        "name": "Famdesc",
        "description": "Famdesc offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "es"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Nuestra Visión hacia el Futuro"
    subTitle="Creemos que la tecnología es la herramienta para conectar a las familias del mañana. En los próximos años, expandiremos nuestros servicios en respuesta a las necesidades emergentes, explorando nuevas formas de automatización, personalización y soporte emocional. Además, trabajaremos en alianzas estratégicas que enriquecerán la experiencia en Famdesc."
    btnExists={false}
    btnTitle=""
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Nuestro Futuro: Un Ecosistema Dinámico y Familiarmente Conectado"
    subTitle="Famdesc está construyendo una plataforma que trasciende lo digital para convertirse en una parte fundamental de la vida de las familias. En los próximos años, implementaremos nuevas tecnologías, como realidad aumentada (AR) para revivir momentos históricos en casa, y exploraremos formas de conectarnos con dispositivos del hogar inteligente, todo sin perder de vista nuestros pilares de privacidad, seguridad y experiencia familiar enriquecedora."
    mainStatTitle="-- %"
    mainStatSubTitle="de nuestros clientes califican su experiencia con Famdesc de excepcional"
    stats={[
      {
        stat: "-- %",
        description: "de los usuarios consideran que el contenido que reciben es relevante.",
      },
      {
        stat: "99.9% ",
        description: "de disponibilidad de los servicios en todo momento",
      },
      {
        stat: "-- %",
        description: "de los usuarios interactúan al menos una vez al día en Famdesc",
      },
    ]}
  />
</MainLayout>
