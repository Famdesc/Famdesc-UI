---
const { src, alt } = Astro.props;
interface Props {
  src: any;
  alt: string;
}
---

<div class="flex flex-col items-center justify-center">
  <video
    class="aspect-video h-full w-full rounded-xl border-none"
    width="320"
    height="240"
    controls
    autoplay
    muted
    loop
    playsinline
    preload="none"
  >
    <source src={src} type="video/webm" />

    <p>
      Your browser does not support HTML video. Here is a
      <a href={src} download="Famdesc-video.mp4"> link to the video </a>{" "}
      instead.
    </p>
  </video>

  <p class="my-4">{alt}</p>
</div>
